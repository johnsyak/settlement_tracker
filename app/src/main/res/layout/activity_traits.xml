<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weapon Type:"
            android:id="@+id/type_label"
            android:layout_marginTop="5dp"/>
        <EditText
            android:id="@+id/proficiency_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:hint="Select before hunt"
            android:inputType="text"
            android:maxLength="50"
            android:maxLines="1"
            android:textSize="15dp"
            />

        <include
            android:id="@+id/xp"
            layout="@layout/xp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp" />

        <include
            android:id="@+id/proficiency"
            layout="@layout/proficiency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <include
            android:id="@+id/lore_courage"
            layout="@layout/lore_courage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <include
            android:id="@+id/lore_understanding"
            layout="@layout/lore_understanding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <include
            android:id="@+id/fighting_arts"
            layout="@layout/abilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <include
            android:id="@+id/disorders"
            layout="@layout/abilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <include
            android:id="@+id/impairments"
            layout="@layout/abilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />
    </LinearLayout>
</ScrollView>
