<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/stat_sheet">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <include
        layout="@layout/player_info"
        android:id="@+id/player_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <include
        android:id="@+id/survival_tab"
        layout="@layout/survival_tab"
        android:padding="20dp" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />
    <include
        android:id="@+id/stat_tab"
        layout="@layout/stat_tab"
        android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"/>

    <include
        android:id="@+id/brain_tab"
        layout="@layout/brain_tab"
        android:padding="20dp"/>
    <include
        android:id="@+id/damage_tab_head"
        layout="@layout/damage_tab"
        android:padding="20dp"
        android:layout_height="90dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        />
    <include
        android:id="@+id/damage_tab_arms"
        layout="@layout/damage_tab"
        android:padding="20dp"
        android:layout_height="90dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        />
    <include
        android:id="@+id/damage_tab_body"
        layout="@layout/damage_tab"
        android:padding="20dp"
        android:layout_height="90dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        />
    <include
        android:id="@+id/damage_tab_waist"
        layout="@layout/damage_tab"
        android:padding="20dp"
        android:layout_height="90dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        />
    <include
        android:id="@+id/damage_tab_legs"
        layout="@layout/damage_tab"
        android:padding="20dp"
        android:layout_height="90dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        />
    </LinearLayout>
</ScrollView>