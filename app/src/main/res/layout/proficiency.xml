<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/customborder"
    android:orientation="vertical"
    android:id="@+id/proficiency_layout">

    <TextView
        android:id="@+id/proficiency_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weapon Proficiency:"
        android:textSize = "12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LVL"
        android:id="@+id/level"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/proficiency_label"
        android:layout_alignBaseline="@id/proficiency_label"/>

    <TextView
        android:id="@+id/specialist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specialist"
        android:textSize="13dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Master"
        android:textSize="13dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/specialist" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/proficiency_button"
        android:layout_alignTop="@+id/level"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>