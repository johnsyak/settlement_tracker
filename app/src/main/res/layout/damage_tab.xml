<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:background="@drawable/customborder">

    <TextView
        android:id="@+id/damage_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:background="@drawable/shield"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Head"
        android:id="@+id/stat_label"
        android:paddingTop="5dp"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/damage_stat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/injury_status"
        android:text="Knocked Down"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/damage_stat" />

    <TextView
        android:id="@+id/base_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/stat_label"
        android:text="Base:"
        android:layout_alignBottom="@+id/stat_label"
        android:paddingTop="5dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/base_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/base_label"
        android:text="0"
        android:layout_alignBottom="@+id/base_label"
        android:paddingTop="5dp"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>