<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/customborder">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courage level:"
        android:textSize = "12dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/courage_level"
        android:text="LVL"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/tinker"
        android:layout_alignBaseline="@id/type"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/insight"
        android:text="Bold"
        android:textSize="16dp"
        android:layout_alignStart="@+id/type"
        android:layout_below="@id/type"
        android:layout_toEndOf="@id/courage_level"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/white_secret"
        android:layout_marginLeft="60dp"
        android:textSize="15dp"
        android:text="See The Truth"
        android:layout_below="@+id/type"
        android:layout_toEndOf="@+id/type" />

    <View
        android:layout_marginTop="5dp"
        android:layout_below="@id/insight"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background = "@android:color/black"
        android:id="@+id/line" />

    <CheckBox
        android:id="@+id/analyze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line"
        android:text="Stalwart:"
        android:textStyle="normal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Can't be knocked down by brain trauma or intimidate"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/analyze"
        android:layout_alignBaseline="@+id/analyze"
        android:layout_alignBottom="@+id/analyze"
        android:layout_alignParentEnd="true"
        android:id="@+id/stalwartText"/>

    <CheckBox
        android:id="@+id/explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prepared:"
        android:textStyle="normal"
        android:layout_below="@+id/analyze"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Add Hunt XP to your roll when determining a straggler"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/explore"
        android:layout_alignBaseline="@+id/explore"
        android:layout_alignBottom="@+id/explore"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:id="@+id/tinker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matchmaker:"
        android:textStyle="normal"
        android:layout_below="@+id/explore"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Spend 1 endeavor to trigger initimacy "
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tinker"
        android:layout_alignBaseline="@+id/tinker"
        android:layout_alignBottom="@+id/tinker"
        android:layout_alignParentEnd="true"
        android:id="@+id/intimacy" />

    <Button
        android:id="@+id/button_courage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/analyze"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/courage_level"
        android:background="@android:color/transparent"/>

</RelativeLayout>