<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="77dp"
    android:background="@drawable/customborder"
    android:id="@+id/brain_tab">

    <TextView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/insanity_stat"
        android:text="0"
        android:textSize="35dp"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <TextView
        android:text="Brain"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brain_label"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:layout_toEndOf="@id/insanity_stat"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/insanity_label"
        android:text="Insanity"
        android:textSize="10dp"
        android:paddingLeft="6dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/insanity_stat"
        android:layout_alignEnd="@+id/insanity_stat"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/is_insane"
        android:text="You are insane!"
        android:paddingLeft="10dp"
        android:layout_toEndOf="@id/insanity_stat"
        android:layout_alignParentBottom="true" />

</RelativeLayout>